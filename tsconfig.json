{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
  },
  "include": [
    "src/**/*",
    "test/fixtures/*",
    "test/e2e/*",
  ]
}
